<div class="main posts-new">
  <div class="container">
    <h1 class="form-heading">投稿する</h1>
    <%= form_for @quiz,:url => { :controller => :contents, :action => :created },multipart: true do |f| %>
      <div class="form">
        <div class="form-body">
          <% @quiz.errors.full_messages.each do |message| %>
            <div class="form-error">
              <%= message %>
            </div>
            <% end %>
            <%= f.label "ジャンル" %>
            <%= f.collection_select :genre_id, Genre.all, :id, :name,:prompt => "ジャンル" %>
            <br />
            <%= f.label :content %>
            <%= f.text_field :content %>
            <%= f.label :answer1 %>
            <%= f.text_field :answer1 %>
            <%= f.label :answer2 %>
            <%= f.text_field :answer2 %>
            <%= f.label :answer3 %>
            <%= f.text_field :answer3 %>
            <%= f.label :answer4 %>
            <%= f.text_field :answer4 %>
            <%= f.label "解説" %>
            <%= f.text_field :quiz_comment %>
            <%= f.label "ファイルアップロード" %>
      	    <%= f.file_field :content_picture %>
            <%= f.hidden_field :quiz_addId, value: session[:user_id] %>
            <%= f.submit "投稿する", class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>