<div class="main users-edit">
  <div class="container">
    <h1 class="form-heading">結果</h1>
    <div class="form users-form">
      <div class="form-body">
      <table border=1>
       <tr><th> ジャンル </th><th> 番号 </th><th> 問題 </th><th> 答え </th><th> 解答 </th><th> 結果 </th></tr>
       <% @result_Array.each do |result| %>
           <% @i += 1 %>
           <% quiz = Quiz.find_by(id: result.quiz_id) %>
    		<tr>
        		<td align=\"center\"><%= @genres[quiz.genre_id-1] %></td>
        		<td><%= @i %></td>
        		<td><%= quiz.content %></td>
        		<td><%= quiz.answer1 %></td>
        		<td><%= result.user_answer %></td>
        		<% if quiz.answer1 ==  result.user_answer %>
        		<td>○</td>
        		<% else %>
        		<td>×</td>
        		<% end %>
    	  </tr>
    	<% end %>
	    </table>
	    <div class="two-buttons">
	     <%= link_to "TOP", '/', class: "btns" %>
	     <%= link_to "RETRY", '/index', class: "btns" %>
	    </div>
	     <div class="sns">
	       <ul>
	         <li>
	           <a href="https://twitter.com/share?ref_src=twsrc%5Etfw" class="twitter-share-button" data-size="small" data-text="3分もかからずにクイズを解いたよ！あなたは何分？" data-hashtags="クイズ #カルチャー" data-show-count="false">Tweet</a><script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
	         </li>
	         <li>
	           <div class="fb-like" data-href="https://lit-meadow-59301.herokuapp.com/" data-layout="button" data-action="like" data-size="small" data-show-faces="false" data-share="false"></div>
	         </li>
	         <li>
	           <a class="tumblr-share-button" data-color="blue" data-notes="none" href="https://embed.tumblr.com/share"></a>
	         </li>
	         <li>
	          <div class="line-it-button" style="display: none;" data-lang="ja" data-type="share-a" data-url="https://lit-meadow-59301.herokuapp.com/"></div>
            <script src="https://d.line-scdn.net/r/web/social-plugin/js/thirdparty/loader.min.js" async="async" defer="defer"></script>
	         </li>
	       </ul>
	     </div>
      </div>
    </div>
  </div>
</div>