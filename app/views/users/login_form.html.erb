<div class="main users-new">
  <div class="container">
    <h1>Sign in</h1>
    <div class="form users-form">
      <div class="form-body">
        <% if @error_message %>
          <div class="form-error">
            <%= @error_message %>
          </div>
        <% end %>
        <div class="row">
        <div class="col-md-6 col-md-offset-3">
        <%= form_tag("/login") do %>
          <p>メールアドレス</p>
          <input name="email" >
          <p>パスワード</p>
          <input type="password" name="password">
          <input type="submit" value="ログイン" class = "btn btn-primary">
        <% end %>
        </div>
        </div>
      </div>
    </div>
  </div>
</div>
