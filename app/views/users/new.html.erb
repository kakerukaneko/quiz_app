<div class="form">
<%= form_with model: @user, local: true do |f| %>
  <div class="form-body">
    <%= f.text_field :name, placeholder: "ニックネーム" %></br>
    <%= f.text_field :email, placeholder: "Eメール" %></br>
    <%= f.password_field :password, placeholder: "パスワード" %></br>
    <%= f.hidden_field :image_name, value: "default_user.jpg" %>
    <% if @user.errors.any? %>
      <div class="form-error">
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <%= f.submit "登録", class: "btn btn-primary" %>
  </div>
<% end %>
</div>
